@inject IServicioRepositorio ServicioRepo


@page "/C_Servicios"

@if (servicios == null || servicios.Count() == 0)
{
    <p>Cargando...</p>
}
else{
<div class="container p-3">
            <div class="row pt-4">
                <div class="col-6"></div>
            </div>
            <div class="container border">
                <h2 class="text-primary">Lista de Servicios</h2>
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Descripcion</th>
                            <th>Duracion</th>
                            <th>Precio</th>
                            <th width="30">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var serv in servicios)
                        {
                            if(serv.Visible == true)
                            {
                            <tr>
                                <td>@serv.Nombre</td>
                                <td>@serv.Descripcion</td>
                                <td>@serv.Duracion</td>
                                <td>@serv.Precio</td>
                                <td class="text-center">
                                    <div class="w-30 btn-group">
                                        <a ><i class="fa-solid fa-pen-to-square"></i></a>
                                        <a class="btn btn-sm btn-outline-primary oi oi-eye" href="R_Servicios/@serv.ServicioId">Ver</a>
                                    </div>
                                </td>
                            </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
     </div>
    
}
@code {
    private List<Servicio> servicios = new List<Servicio>();

    protected override async Task OnInitializedAsync()
    {
        servicios= await ServicioRepo.GetServicio();
    }

}
